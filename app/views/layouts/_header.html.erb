<nav class="navbar navbar-expand-lg bg-primary">
  <% link = ADMIN_OPTIONS['report_mode'] ? '#' : root_path %>
  <%= link_to(link, { class: 'navbar-brand text-white' }) do %>
    Sara Alert<small class="nav-version ml-1"><%= ADMIN_OPTIONS['version'] %></small>
  <% end %>
  <% unless current_user.nil? %>
    <form class="form-inline ml-auto">
      <a class="nav-link night-nav-link text-white"><i class="fas fa-user"></i>&nbsp;&nbsp;<%= current_user.email %></a>
      <% unless ADMIN_OPTIONS['report_mode'] %>
        <a class="white-border-right"></a>
        <%= render partial: 'layouts/help' %>
      <% end %>
      <a class="white-border-right"></a>
      <% if current_user.usa_admin? %>
        <a class="nav-link night-nav-link text-white" href="<%= oauth_applications_path %>"><i class="fas fa-share-alt"></i>&nbsp;&nbsp;API</a>
        <a class="white-border-right"></a>
      <% end %>
      <a class="nav-link night-nav-link text-white" href="<%= destroy_user_session_path %>" data-method="DELETE"><i class="fas fa-sign-out-alt"></i>&nbsp;&nbsp;Logout</a>
    </form>
  <% end %>
</nav>
<% unless ENV['SHOW_DEMO_WARNING'].blank? %>
  <div class="navbar navbar-dark bg-warning mb-3">
    This system is for demonstration use only, please do not provide any personal identifying information other than business contact data that may be required for testing.
  </div>
<% else %>
  <div class="mb-3"></div>
<% end %>
