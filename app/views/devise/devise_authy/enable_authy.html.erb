<% content_for :assets do %>
  <%= javascript_packs_with_chunks_tag 'authy' %>
<% end %>
<div class="authy-menu col-24 d-flex flex-column justify-content-center">
  <div class="row">
    <div class="col-md-15 col-lg-12 col-xl-10 mx-auto">
      <div class="pb-4">
        <%= render partial: 'devise/shared/logo' %>
      </div>
      <div class="card shadow shadow-sm card-square">
        <div class="card text-center">
          <div class="card-header">
            <h4 class="mb-0">Register For 2-Factor Authentication</h4>
          </div>
          <div class="card-body">
            <%= enable_authy_form do %>
              <div class="form-row">
                <div class="form-group col-md-10 mb-0">
                  <select id="country-code-0" name="country_code" class="form-control form-control-sm" aria-label="Country Code Select">
                    <option value="1">United States of America (+1)</option>
                    <option value="680">Palau (+680)</option>
                  </select>
                </div>
                <div class="form-group col-md-10 mb-0">
                  <%= text_field_tag :cellphone, '', autocomplete: :off, placeholder: I18n.t('devise.cellphone'), id: 'authy-cellphone', class: 'form-control form-control-sm mt-0' %>
                </div>
                <div class="form-group col-md-4 mb-0">
                  <%= submit_tag I18n.t('enable_authy', { scope: 'devise' }), class: 'btn btn-primary btn-sm mt-0', value: 'Register' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
