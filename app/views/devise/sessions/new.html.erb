<div class="auth-container">
  <h1 class="sr-only">Log In</h1>
  <div class="row">
    <div class="col-24 d-flex flex-column justify-content-center">
      <div class="row">
        <div class="col-md-15 col-lg-12 col-xl-10 mx-auto">
          <div class="pb-4">
            <%= render partial: 'devise/shared/logo' %>
          </div>
          <div class="card shadow shadow-sm card-square">
            <div class="card-header">
              <h2 class="mb-0">Log In</h2>
            </div>
            <div class="card-body">
              <% if !flash[:alert].blank? && !flash[:alert].include?('You need to sign in or sign up before continuing.') %>
                <div class="alert alert-danger" role="alert">
                  <%= flash[:alert] %>
                </div>
              <% end %>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <label for="uname1">Email</label>
                  <input type="email" autofocus="autofocus" autocomplete="email" class="form-control form-control-lg rounded-0" name="user[email]" id="user_email" required="" />
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" autocomplete="current-password" class="form-control form-control-lg rounded-0" name="user[password]" id="user_password" required="" />
                </div>
                <button type="submit" class="btn btn-outline-primary btn-lg float-right btn-square px-5" id="login">Log In</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
